md-dialog
	md-toolbar
		.md-toolbar-tools
			h4 Nuevo Salón
			span(flex)
			md-button(ng-click="close()")
				md-icon clear
	form.md-padding(layout="row" ng-submit="submit(salon)")
		md-input-container(flex)
			label Nombre del Salón
			input(ng-model="salon.nombre" required)
		md-button.md-raised(type="submit")
			md-icon save

