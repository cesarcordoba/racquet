.portada-salon(style="background-image:url({{ctrl.salon.item.imagenes[0].imagen}})")
	.texto-experiencia
		p SALON
		h1 {{ctrl.salon.item.nombre}}
		.descripcion(ng-bind-html="ctrl.salon.item.descripcion")
.salon-container
	.salon-content
		.calendario
			md-list
				md-list-item(ng-repeat="fecha in ctrl.calendarios.items")
					strong {{fecha.fecha | date: 'medium'}}
					md-divider
		.eventos-container
			md-grid-list(md-cols="3" md-row-height="150px" md-gutter-gt-md='10px' md-gutter-md='4px' md-gutter='4px')
				md-grid-tile(md-colspan="1" md-rowspan="1" ng-repeat="evento in ctrl.eventos.items")
					.imagen(style="background-image:url({{evento.imagen[0].imagen}}); width: 100%; height : 100%; background-position: center; background-repeat: no-repeat; background-size: cover;")
