.salon(layout="row" layout-xs="column")
	md-card.salon-content(flex="50")
		md-toolbar
			.md-toolbar-tools
				h4 Información Básica
				span(flex)
				md-button(ng-click="ctrl.salones.habilitarEdicion()")
					md-icon(ng-show="!ctrl.infomuestra") edit
					md-icon(ng-show="ctrl.infomuestra") clear
		md-card-content
			.AntesEdicion(ng-show= "!ctrl.infomuestra")
				h1 Nombre:
				h3 {{ctrl.salones.item.nombre}}
				md-divider
				h1 Descripción:
				.infoBasica-content(ng-bind-html="ctrl.salones.item.descripcion")
			.DespuesEdicion(ng-show= "ctrl.infomuestra")
				form.servicio-form(ng-submit="ctrl.salones.editarSalon(ctrl.salones.item)" layout="column")
					.info(layout="row" layout-xs="column" layout-align="space-between center")
						md-input-container(flex)
							md-icon(md-colors="{color: 'green'}")  &#xE873;
							label Nombre del Salón
							input(ng-model="ctrl.salones.item.nombre")
					.descripcion-container
						.titulo(layout="row")
							md-icon(md-colors="{color: 'green'}") &#xe22b;
							p Descripción del Salón
						text-angular(ng-model="ctrl.salones.item.descripcion")
					md-button.servicio.info(type="submit")
						md-icon save
	md-card.apartado-content(flex="50")
		md-toolbar
			.md-toolbar-tools
				h4 Apartar Salón
		md-card-content
			.apartar(layout="row")
				form(ng-submit="ctrl.salones.click(fecha)")
					md-datepicker(ng-model="fecha.fecha" md-placeholder="selecciona la fecha")
					md-button(type="submit")
						md-icon add

			md-list
				md-list-item(class="md-2-line" ng-repeat="fecha in ctrl.salones.fechas")
					img.md-avatar(src="img/calendario.png")
					strong {{fecha.fecha | date: 'medium'}}
					md-button.md-fab.botones.md-secondary(md-colors="{background: 'red'}" ng-click="ctrl.salones.eliminarApartado($index, fecha)")
						md-icon delete
					md-divider
