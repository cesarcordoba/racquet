.servicio(layout="row" layout-xs="column")
	md-card.servicio-content(flex="50")
		md-toolbar
			.md-toolbar-tools
				h4 Información Básica
				span(flex)
				md-button(ng-click="ctrl.servicios.habilitarEdicion()")
					md-icon(ng-show="!ctrl.infomuestra") edit
					md-icon(ng-show="ctrl.infomuestra") clear
		md-card-content
			.AntesEdicion(ng-show= "!ctrl.infomuestra")
				h1 Nombre:
				h3 {{ctrl.servicios.item.nombre}}
				md-divider
				h1 Descripcion:
				.infoBasica-content(ng-bind-html="ctrl.servicios.item.descripcion")
			.DespuesEdicion(ng-show= "ctrl.infomuestra")
				form.servicio-form(ng-submit="ctrl.servicios.editarServicio(ctrl.servicios.item)" layout="column")
					.info(layout="row" layout-xs="column" layout-align="space-between center")
						md-input-container(flex)
							md-icon(md-colors="{color: 'green'}")  &#xE873;
							label Nombre del Servicio
							input(ng-model="ctrl.servicios.item.nombre")
					.descripcion-container
						.titulo(layout="row")
							md-icon(md-colors="{color: 'green'}") &#xe22b;
							p Descripción del Servicio
						text-angular(ng-model="ctrl.servicios.item.descripcion")
					md-button.servicio.info(type="submit")
						md-icon save
	md-card.instructores-container(flex="50")
		md-toolbar
			.md-toolbar-tools
				h4 Instructores
		md-card-content
			.instructores-content
				form(ng-submit="ctrl.instructores.agregarInstructor(instructor)" layout="row")
					md-select(ng-model="instructor" placeholder="Selecciona un instructor" required flex)
						md-option(ng-value="instructor" ng-repeat="instructor in ctrl.instructores.items") {{instructor.nombre}}
					md-button(type="submit")
						md-icon add
			md-virtual-repeat-container#vertical-container
				.repeated-item(layout="row" md-virtual-repeat='instructor in ctrl.instructores.agregados' flex)
					.texto(flex)
						strong {{instructor.nombre}}
					.botones-container(layout-align="end end")
						md-button.md-fab.botones(md-colors="{background: 'green'}" ng-click="ctrl.instructores.mandarAInstructor(instructor)")
							md-icon visibility
						md-button.md-fab.botones(md-colors="{background: 'red'}" ng-click="ctrl.instructores.eliminarInstructor($index, instructor)")
							md-icon delete
md-card.instalaciones-container
		md-toolbar
			.md-toolbar-tools
				h4 Instalaciones
		md-card-content
			.instalaciones-content
				form(ng-submit="ctrl.instalaciones.agregarInstalacion(instalacion)" layout="row")
					md-select(ng-model="instalacion" placeholder="Selecciona una instalacion" required flex)
						md-option(ng-value="instalacion" ng-repeat="instalacion in ctrl.instalaciones.items") {{instalacion.nombre}}
					md-button(type="submit")
						md-icon add
			md-virtual-repeat-container#vertical-container
				.repeated-item(layout="row" md-virtual-repeat='instalacion in ctrl.instalaciones.agregados' flex)
					.texto(flex)
						strong {{instalacion.nombre}}
					.botones-container(layout-align="end end")
						md-button.md-fab.botones(md-colors="{background: 'green'}" ng-click="ctrl.instalaciones.mandarAInstalacion(instalacion)")
							md-icon visibility
						md-button.md-fab.botones(md-colors="{background: 'red'}" ng-click="ctrl.instalaciones.eliminarInstalacion($index, instalacion)")
							md-icon delete
